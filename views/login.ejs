          </div>
          <img src="../imge/box4.png" alt="" class="center-block" />

          <div class = "f2">
            <form name = "f" method="post" action="/users/login">
              <table>
                <tr>
                  <td align="center" colspan="2"><h4>Login</h4></td>
                </tr>
                <tr>
                  <td>ID</td>
                  <td><input type="text" name="id"></td>
                </tr>
                <tr>
                  <td>PWD</td>
                  <td><input type="text" name="pwd"></td>
                </tr>
              </table>
              <button type="submit" style="background: transparent; border: none"><img src="../imge/check1.png" alt="" class="center-block" /></button>
